<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <header>
        <div class="header-icons">
            <div class="fas fa-icon far-left-icon1">
                <input id="menu__toggle" type="checkbox" />
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>
                <ul class="menu__box">
                    <li><a class="menu__item">Service Member</a></li>
                    <li><a class="menu__item">DODAAC</a></li>
                </ul>
            </div>
            <div class="fas fa-icon far-left-icon2">
                <div class="menu-icon" style="margin-left: 25px; cursor: pointer;">
                    <img src="Images/whitehome.jpg" width="30" height="30" />
                </div>
            </div>
        </div>
        <div class="header-middle">
            <div class="fas fa-icon middle-icon" style="margin-left: 170px;">
                <TelerikFontIcon Icon="@FontIcon.Search" />
                <TelerikTextBox Placeholder="Search products..."
                                Rounded="@Rounded"
                                FillMode="@FillMode"
                                Width="450px">
                </TelerikTextBox>
            </div>
        </div>
        <div class="header-icons">
            <div class="fas fa-icon far-right-icon1">
                <div class="NotificationBadge" data-badge="1" style="margin-right: 10px; cursor: pointer;">
                    <img src="Images/whitebelltest.png" width="30" height="30" />
                </div>
            </div>
            <div class="fas fa-icon far-right-icon2" style="margin-right: 10px; cursor: pointer;">
                <div class="user-profile">
                    <span>Place Holder!</span>
                </div>
            </div>
            <div class="fas fa-icon far-right-icon3" style="margin-left: 15px; cursor: pointer;">
                <div class="NotificationBadge" style="padding-bottom: 3px;">
                    <img src="Images/whiteshoppingcart.jpg" width="30" height="35" />
                </div>
            </div>
        </div>
    </header>
</body>
</html>


